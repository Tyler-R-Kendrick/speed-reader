{
  "manifest_version": 3,
  "name": "Speed Reader",
  "version": "0.1.0",
  "description": "Displays web page content in an RSVP player.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/16x16.png",
      "48": "images/48x48.png",
      "128": "images/128x128.png"
    }
  },
  "icons": {
    "16": "images/16x16.png",
    "48": "images/48x48.png",
    "128": "images/128x128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [ "rsvp_assets/rsvp-player.js" ],
      "matches": [ "<all_urls>" ]
    }
  ]
}
